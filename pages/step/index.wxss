/**index.wxss**/
@import '../../css/common.wxss';
@import '../index/index.wxss';

.header {
  text-align: center;
  background-color: #19b4f2;
}

.content {
  width: 300rpx;
  height: 300rpx;
  margin: 30rpx auto;
  border-radius: 50%;
  border: 2px solid rgba(255, 255, 255, 0.6);
}

.content>view {
  color: #fff;
  font-size: 16px;
}
.content .title {
  margin-top: 36rpx
}
.content .count {
  font-size: 52px
}

.step {
  border-bottom: 1px solid #ddd;
  margin-bottom: 0;
  margin: 0 auto;
}
.one{
  margin-top:30rpx;
}
.step:last-child{
  border:0;
}

.tab-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  display: flex;
  width: 100vw;
  font-size: 12px;
  color: #999;
  padding: 10rpx 0;
  border-top: 1px solid #ddd
}
.tab-bar .tab {
  flex: 1;
  text-align: center;
}

.tab-bar .tab .icon {
  width: 48rpx;
  height: 48rpx;
  display: inline-block
}

.tab-bar .tab .title.selected {
  color: #19b4f2
}

.canvas {
  width: 100vw;
  height: 100vw;
}

.date{
  width:100%;
  background:#ccc;
  font-size:26rpx;
  color:#fff;
  margin-top:30rpx;
}
.date>text{
    padding-left:50rpx;
}
.detail{
  display: flex;
  justify-content: space-around;
  font-size:28rpx;
  text-align: center;
  margin-top:120rpx;
}
.num{
  color:#19b4f2;
}
.ft{
  color:#666;
}
.xian{
  border:3rpx solid #A9A9A9;
}
.lc{
  padding-left:60rpx;
}
.xh{
  padding-right:60rpx;
}
