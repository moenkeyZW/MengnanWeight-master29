.weightRecord {
  margin-top: 55%;
  padding: 28rpx 0 46rpx 0;
  margin-bottom: 30rpx;
  
}

.step .icon {
  width: 52rpx;
  height: 52rpx;
  display: inline-block;
  margin: 0 23rpx 45rpx 20rpx;
  border-radius: 50%;
  vertical-align: middle;
  overflow: hidden;
}

.step .record {
  display: inline-block;
  vertical-align: middle;
  line-height: 28px;
}

.step .record>view:first-child {
  color: #000;
  font-size: 29rpx;
}

.step .record>view:last-child {
  color: #999;
  font-size: 29rpx;
}

.weightRecord .img {
  display: inline-block;
  width: 252rpx;
  height: 46rpx;
  vertical-align: middle;
  margin-left: 100rpx;
  margin-top: 60rpx;
}

.step .open {
  position: absolute;
  top: 45rpx;
  right: 23rpx;
  font-size: 16px;
  color: #19b4f2;
}

.step .open image {
  width: 16rpx;
  height: 22rpx;
}

.step .twoImg {
