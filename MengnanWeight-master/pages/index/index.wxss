.header {
  width: calc(100% - 64rpx);
  padding: 20rpx 32rpx 132rpx 32rpx;
  background-color: #19b4f2;
  /*4、有四个值，其中第一个值是设置 top-left 而第二个值是 top-right 第三个值 bottom-right 第四个值是设置 bottom-left*/
  border-radius: 0 0 4% 4%;
}

.hei {
  height: 202rpx;
}

.step {
  width: calc(100% - 60rpx);
  /* height: 300rpx; */
