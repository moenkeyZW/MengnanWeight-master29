/**index.wxss**/
@import '../../css/common.wxss';
@import '../index/index.wxss';

.header {
  text-align: center;
  border-radius: 0;
  padding:32rpx;
}

.content {
  width: 300rpx;
  height: 300rpx;
  margin: 30rpx auto;
  border-radius: 50%;
  border: 2px solid rgba(255, 255, 255, 0.6);
}

.content>view {
  color: #fff;
  font-size: 16px;
}

.content .title {
  margin-top: 36rpx;
}

.content .count {
  font-size: 52px;
}

.step {
  border-bottom: 1px solid #ddd;
  margin-bottom: 0;
  margin: 0 auto;
  border-radius: 0;
  padding:20rpx 0;
}

.tab-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  display: flex;
  width: 100vw;
  font-size: 12px;
  color: #999;
  padding: 10rpx 0;
  border-top: 1px solid #ddd;
  background-color: #fff;
}

.tab-bar .tab {
  flex: 1;
  text-align: center;
}

.tab-bar .tab .icon {
  width: 48rpx;
  height: 48rpx;
  display: inline-block;
}

.tab-bar .tab .title.selected {
  color: #19b4f2;
}

.canvas {
  width: 100vw;
  height: 100vw;
  margin-top: 10vh;
}

.date {
  padding: 0 40rpx;
  color: #fff;
  background-color: #ccc;
  font-size: 14px;
  margin: 10rpx 0 40rpx;
}

.item {
  flex: 1;
  text-align: center;
  font-size: 18px;
}

.item:first-child {
  border-right: 1px solid #ddd;
}

.item .title {
  margin-bottom: 10rpx;
  color: #999;
}

.item .number {
  color: #19b4f2
}
